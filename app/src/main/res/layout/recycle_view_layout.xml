<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#1e1d1d"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="30dp"
            android:text="@string/food_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCaloriePer100Gram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFoodName"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:text="@string/calorie_per_100_gram"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPortion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCaloriePer100Gram"
            android:layout_marginTop="10dp"
            android:layout_marginStart="2dp"
            android:text="@string/portion"
            android:minHeight="48dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalCalorieText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvTotalCalorieNum"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/tvCaloriePer100Gram"
            android:textAlignment="center"
            android:text="@string/total_calories"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalCalorieNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvPortion"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:text="@string/total_calorie_num"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <android.widget.Button
            android:id="@+id/foodDeleteBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/tvCaloriePer100Gram"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_delete"
            android:contentDescription="@string/delete_food" />

        <android.widget.Button
            android:id="@+id/editFoodBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/tvCaloriePer100Gram"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@id/foodDeleteBtn"
            android:background="@drawable/ic_edit"
            android:contentDescription="edit food" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>